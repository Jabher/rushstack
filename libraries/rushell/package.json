    "@rushstack/eslint-config": "0.4.2",
    "@types/jest": "23.3.11",
    "@types/node": "8.10.54",
    "gulp": "~4.0.2",
    "jest": "~23.6.0",
    "ts-jest": "~22.4.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
